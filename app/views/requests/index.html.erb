<div class="card">
    <div class="card-header border-transparent">
        <h3 class="card-title">Requests</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
    <div class="table-responsive">
        <table class="table m-0">
        <thead>
        <tr>
            <th>#ID</th>
            <th>Customer Name</th>
            <th>Customer Phone</th>
            <th>Location</th>
            <th>Delivery area</th>
            <th>Status</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            <% @requests.each do |request| %>
                <tr>
                    <td><a href= '/request/<%= request.id %>'><%= request.id %></a></td>
                    <td><%= request.customer_name %></td>
                    <td><%= request.customer_phone %></td>
                    <td><%= request.date&.strftime('%d/%m/%Y %H:%M') %></td>
                    <td><%= request.area %></td>                       
                    <td><span class="badge badge-success"><%= request.status %></span></td>
                    <td><%= link_to 'Show', request  ,class: 'btn btn-info '%></td>
                    <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger'%></td>
                </tr> 
            <% end %>
        </tbody>
        </table>
    </div>
    <!-- /.table-responsive -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer clearfix">
        <a href="./riders/new" class="btn btn-sm btn-info float-left">Add New Riders</a>
    </div>
    <!-- /.card-footer -->
</div>
<!-- /.card -->
</div>
