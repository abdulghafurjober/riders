<%= form_for(@request, url: @request, method: :put) do |f|%>
  <!-- general form elements -->
  <div class="card card-primary">
    <div class="card-header">
      <h3 class="card-title">Request detail</h3>
    </div>
    <!-- /.card-header -->
    <div class="col-12">
      <!-- form start -->

      <div class="card-body">
        <div class="row">
          <div class="col-4">
            <div class="form-group">
              <label for="">Name</label>
              <%= f.text_field :customer_name, class: 'form-control'%>
            </div>
            <div class="form-group">
              <label for="">Email</label>
                <%= f.text_field :customer_email, class: 'form-control'%>
            </div>
            <div class="form-group">
              <label for="">Phone Number</label>
                <%= f.text_field :customer_phone, class: 'form-control'%>
            </div>
            <div class="form-group">
              <label for="">Address</label>
            <%= f.text_area :customer_address, class: 'form-control'%>
            </div>
          </div>
          <div class="col-4">
            <div class="form-group">
              <label for="">Pickup name </label>
                <%= f.text_field :pickup_name, class: 'form-control'%>
            </div>
            <div class="form-group">
              <label>Pickup phone</label>
              <%= f.text_field :pickup_phone, class: 'form-control'%>
            </div>
            <div class="form-group">
              <label>Pickup address</label>
              <%= f.text_area :pickup_address, class: 'form-control'%>
            </div>
            <div class="form-group">
              <label>Notes</label>
              <%= f.text_area :notes, class: 'form-control'%>
            </div>
          </div>
          <div class="col-4">
            <div class="form-group">
             <label>Additional notes</label>
              <%= f.text_area :additional_notes, class: 'form-control'%>
            </div>
          </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h5>Other details</h5>
            </div>
            <div class="col-lg-4">
                 <div class="form-group">
                    <label for="">Price (RM)</label>
                    <%= f.text_field :total_price, class: 'form-control'%>
                </div>
            </div>
             <div class="col-lg-4">
                 <div class="form-group">
                    <label for="">Distance (KM)</label>
                    <%= f.text_field :distance, class: 'form-control'%>
                </div>
            </div>
            <div class="col-lg-4">
                 <div class="form-group">
                    <label for="">Duration</label>
                    <%= f.text_field :duration, class: 'form-control'%>
                </div>
            </div>
             <div class="col-lg-4">
                 <div class="form-group">
                    <label for="">Status</label>
                    <%= f.text_field :status, class: 'form-control', disabled: true%>
                </div>
            </div>
             <div class="col-lg-4">
                 <div class="form-group">
                    <label for="">Bill code</label>
                    <%= f.text_field :billcode, class: 'form-control', disabled: true%>
                </div>
            </div>
        </div>
      </div>
      <!-- /.card-body -->

      <div class="card-footer">
        <div class="row">
          <div class="col-4"></div>
          <div class="col-4">
            <a class="btn btn-secondary" href="/requests">Back</a>
          </div>
          <div class="col-4"></div>
        </div>
      </div>
    </div>
  </div>
<% end %>
