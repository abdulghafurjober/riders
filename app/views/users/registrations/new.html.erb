<style>
  body {
    margin: 0;
    padding: 0;
    background-color: #17a2b8;
    height: 100vh;
  }
  #login .container #login-row #login-column #login-box {
    margin-top: 110px;
    max-width: 600px;
    height: 400px;
    border: 1px solid #9C9C9C;
    background-color: #EAEAEA;
  }
  #login .container #login-row #login-column #login-box #login-form {
    padding: 20px;
  }
  #login .container #login-row #login-column #login-box #login-form #register-link {
    margin-top: -85px;
  }
  #page-content {
    flex: 1 0 auto;
  }
</style>
<div id="page-content">
  <div id="login">
    <h3 class="text-center text-white pt-5">Rider System</h3>
    <div class="container">
      <div id="login-row" class="row justify-content-center align-items-center">
        <div id="login-column" class="col-md-6">
          <div id="login-box" class="col-md-12">
            <div id="login-form" class="form">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <h3 class="text-center text-info">Register</h3>
                <div class="form-group">
                  <label for="username" class="text-info">Your Email:</label><br>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "username"%>
                </div>
                <div class="form-group">
                  <label for="password" class="text-info">Password:</label><br>
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "password"%>
                </div>
                <div class="form-group">
                  <label for="password" class="text-info">Confirm Password:</label><br>
                  <%= f.password_field :password_confirmation, autocomplete: "current-password", class: "form-control", id: "password"%>
                </div>
                <div class="form-group">
                  <div class="text-left">
                    <%= f.submit "Register", class:"btn-info"%>
                  </div>
                  <div class="text-right">
                    <%= render "users/shared/links", class: "text-info"%>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>