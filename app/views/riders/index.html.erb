<p id="notice"><%= notice %></p>

<h1>Riders</h1>

<table>
  <thead>
    <tr>
      <th>Ic</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @riders.each do |rider| %>
      <tr>
        <td><%= rider.IC %></td>
        <td><%= rider.Name %></td>
        <td><%= rider.Phone %></td>
        <td><%= rider.Location %></td>
        <td><%= link_to 'Show', rider %></td>
        <td><%= link_to 'Edit', edit_rider_path(rider) %></td>
        <td><%= link_to 'Destroy', rider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

